<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @ticket.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @ticket.address %>
</p>

<p>
  <strong>Price:</strong>
  <%= @ticket.price %>
</p>

<p>
  <strong>Email address:</strong>
  <%= @ticket.email_address %>
</p>


<p>
  <strong>Phone number:</strong>
  <%= @ticket.phone_number %>
</p>

<p>
  <strong>Seat id seq:</strong>
  <%= @ticket.seat_id_seq %>
</p>

<p>
  <strong>Event id:</strong>
  <%= @ticket.event_id %>
</p>

<% if @ticket.user == current_user %>
  <%= link_to 'Edit', edit_ticket_path(@ticket), class: 'btn btn-info btn-xs' %>
<% end %>

