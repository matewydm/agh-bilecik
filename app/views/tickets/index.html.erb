<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table class = "table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Email address</th>
      <th>Phone number</th>
      <th>Seat id seq</th>
      <th>Event id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.address %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.email_address %></td>
        <td><%= ticket.phone_number %></td>
        <td><%= ticket.seat_id_seq %></td>
        <td><%= ticket.event_id %></td>
        <td><%= link_to 'Show', ticket, class: 'btn btn-info btn-xs' %></td>
        <% if ticket.user == current_user %>
          <td><%= link_to  edit_ticket_path(ticket), class: 'btn btn-info btn-xs' do %>
              <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
          </td>
          <td><%= link_to  ticket, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' }  do %>
              <i class="glyphicon glyphicon-remove"></i> Destroy
            <% end %>
          </td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<td><%= link_to 'Buy a ticket', new_ticket_path, class: 'btn btn-success btn-xs' %></td>


