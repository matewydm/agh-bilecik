<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class = "table-striped">
  <thead>
  <tr>
    <th>Id</th>
    <th>Artist</th>
    <th>Price Low</th>
    <th>Price High</th>
    <th>Event Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% events.each do |event| %>
    <tr>
      <td><%= event.id %></td>
      <td><%= event.artist %></td>
      <td><%= event.price_low %></td>
      <td><%= event.price_high %></td>
      <td><%= event.event_date %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path , class: 'btn btn-success btn-xs'%>
