<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table class = "table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Price</th>
    <th>Email address</th>
    <th>Phone number</th>
    <th>Seat id seq</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.name %></td>
      <td><%= ticket.address %></td>
      <td><%= ticket.price %></td>
      <td><%= ticket.email_address %></td>
      <td><%= ticket.phone_number %></td>
      <td><%= ticket.seat_id_seq %></td>
      <td><%= link_to 'Show', ticket, class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Edit', edit_ticket_path(ticket), class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', ticket, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

